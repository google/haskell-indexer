library
  exposed-modules: Haskell.Indexer.Plugin
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.12 && < 5, ghc
                       , haskell-indexer-backend-ghc
                       , haskell-indexer-backend-core
                       , haskell-indexer-pipeline-ghckythe-wrapper
                       , haskell-indexer-frontend-kythe
                       , filepath, directory
